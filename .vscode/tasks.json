{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All Skills",
            "type": "shell",
            "command": "make",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Quality Check All Skills",
            "type": "shell",
            "command": "make",
            "args": ["quality-check"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$go", "$golangci-lint"]
        },
        {
            "label": "Build Home Assistant Skill",
            "type": "shell",
            "command": "make",
            "args": ["build"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/homeassistant-skill"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Install Home Assistant Skill",
            "type": "shell",
            "command": "make",
            "args": ["install"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/homeassistant-skill"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}