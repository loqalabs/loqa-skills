{
    // Go language settings for skills development
    "go.formatTool": "gofmt",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--config", ".golangci.yml",
        "--fast"
    ],
    "go.vetOnSave": "package",
    "go.buildOnSave": "off",
    "go.lintOnSave": "package",
    "go.coverOnSave": false,
    "go.formatFlags": ["-s"],
    
    // Editor settings for auto-formatting on save
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    
    // Go-specific formatting
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    
    // Skill manifest and config formatting
    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    
    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    
    // File associations for skill development
    "files.associations": {
        ".golangci.yml": "yaml",
        "skill.json": "json",
        "manifest.json": "json",
        "*.skill": "json"
    },
    
    // Exclude build artifacts and skill binaries
    "files.exclude": {
        "**/bin": true,
        "**/*.log": true,
        "**/coverage.out": true,
        "**/*.so": true,
        "**/build": true
    }
}